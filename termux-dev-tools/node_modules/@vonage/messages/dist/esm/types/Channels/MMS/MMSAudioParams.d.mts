 * defined in `MessageAudioType`. It is used when creating an audio message for the MMS channel.
 *
 * @group MMS
 * @category Parameters
 */
type MMSAudioParams = {
    audio: {
        caption?: string;
    } & MessageAudioType;
} & MMSParams & MessageParams & MessageAudioType;

export type { MMSAudioParams };
